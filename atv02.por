programa {
  funcao inicio() {

    real a, b, c, d, soma, media 

    escreva("Digite a Nota 1: ")
    leia(a)

    escreva("Digite a Nota 2: ")
    leia(b)

    escreva("Digite a Nota 3: ")
    leia(c)

    escreva("Digite a Nota 4: ")
    leia(d)

    soma = a + b + c + d
    media = soma / 4

    escreva("A Média das notas é: ", media )
    
  }
}
